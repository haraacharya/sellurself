<h4>Register:</h4>

<% if @user.errors.any? %>
	<div class="alert alert-error">
		<%= @user.errors.full_messages.join("<br/>").html_safe %>
	</div>
<% end %>


<%= form_for @user do |f| %>
	<%= f.text_field :firstname, class: "span3",placeholder: "FIRSTNAME" %>
	<br/>
	<%= f.text_field :lastname, class: "span3", placeholder: "LASTNAME" %>
	<br/>
	<%= f.text_field :username, class: "span3", placeholder: "EMAIL(USERNAME)" %>
	<br/>
	<%= f.password_field :password, class: "span3", placeholder: "Password" %>
	<br/>
	<br/>
	<%= f.label :twitter, "Twitter-username(optional)" %>
	<%= f.text_field :twitter, class: "span3", placeholder: "Twitter-handle" %>
	<br/>

	<%= f.submit "Register!", class: "btn btn-large btn-primary" %> 
<% end %>
