
<div class="brand"> <strong> <%= link_to "SELL-UR-SELF", root_path %> </strong> </div>
<ul class="nav">
	<li <%= active(root_path) %> ><%= link_to "Home", root_path %></li>
    <li <%= active(new_post_path) %> ><%= link_to "Create a post", new_post_path %></li>
	<li <%= active(aboutus_path) %> ><%= link_to "About", aboutus_path %></li>
	<li <%= active(contactus_path) %> ><%= link_to "Contact", contactus_path %></li>

	<!--<li class="divider-vertical"></li>-->

    <li>
    	<%= form_tag(search_path, :method => :get, :class => "navbar-form") do %>
    		<%= text_field_tag :search, params[:search], class: "span3", :placeholder => "Search for the posts here..." %>
    		<%= submit_tag "Search", class: "btn btn-primary" %>
    	<% end %>
    </li>

    <!--<li class="divider-vertical"></li>-->
    
    <% if logged_in? %>
        <!--<li style="padding: 10px 15px;">Welcome <%= current_user.firstname %></li>-->
        <li <%= active(user_path(current_user)) %> ><%= link_to "Profile", user_path(current_user) %></li>
        <li><%= link_to "Logout", logout_path %></li>
        <li <%= active(categories_path) %> ><%= link_to "Create category", categories_path %></li>
    <% else %>
        <li <%= active("/register") %> ><%= link_to "Sign up", "/register" %></li>  
        <li <%= active(login_path) %> ><%= link_to "Sign in", login_path %></li>  
    <% end %>        

</ul>    


